<!--================Login Box Area =================-->
<section class="login_box_area section_gap">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="login_box_img">
          <img class="img-fluid" src="/assets/login.jpg" alt="">
          <div class="hover">
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="login_form_inner">
          <h3>Log in to enter</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:"row login_form"}) do |f| %>
            <div class="col-md-12 form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email"  %>
            </div>

            <div class="col-md-12 form-group">
              <%= f.password_field :password, autocomplete: "current-password",class: "form-control", placeholder: "Password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="col-md-12 form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

            <div class="col-md-12 form-group">
              <%= f.submit "Log in", class:"primary-btn" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>


